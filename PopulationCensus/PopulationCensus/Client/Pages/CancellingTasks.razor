@page "/cancelling-tasks"


<h3>CancellingTasks</h3>

<br />

<div style="border-style: solid; padding: 50px; height: 190px;">
    
<div><span>Cancelling a simple delay task</span></div>

<br />

<button @onclick="@StartButton_Click" disabled="@IsStartButtonDisabled_SimpleDelayTask">Start</button>

<button @onclick="@CancelButton_Click" disabled="@IsCancelButtonDisabled_SimpleDelayTask">Cancel</button>

<div>@MessageSimpleDelayTask</div>

</div>